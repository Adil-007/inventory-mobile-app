{
  "expo": {
    "name": "Ease Stock",
    "slug": "ease-stock",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/EaseStockLogo.png",
    "scheme": "easestock",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.easestock.app", 
      "buildNumber": "1"
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.easestock.app",
      "versionCode": 1
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "resizeMode": "cover",
          "backgroundColor": "#BA43CE"
        }
      ],
      "expo-font",
      "expo-secure-store"
    ],

    "experiments": {
      "typedRoutes": true
    }
  }
}
